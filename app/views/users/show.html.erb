

<div class= "container">
  
    
<%= high_chart("orders_chart", @chart) %>
<%unless @user_days.length ==1%>
<p class="text-center weight-change">
  <strong>Total Weight Change: </strong> 
 <%= total_weight_change(@all) %></p>
<%else%>
  <h2 class="lato text-center">Enter more dates for better tracking and features.</h2>
<%end%>
  <h2 class="kalam">Recent Entries</h2>
  <table id="recent-table" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <td>Date</td>
        <td>Weight</td>
    </tr>
    </thead>
    <tbody>
<% @last_7.each do |x| %>
  <tr class="context">
    <td><%=x.date%></td>
    <td class ="weight"><%=x.weight%></td>
  </tr>
<% end%>
    </tbody>
  </table>
  <%unless @user_days.length ==1%>
  <p class="text-center weight-change">
    <strong>Recent Weight Change: </strong> 
 <%= weight_change(@last_7) %></p>
  <%end%>
</div>
<p><%= link_to 'View/Edit all dates', days_index_path%></p>
<p><%= link_to 'Edit Profile', edit_user_path(@user)%></p>
<%if current_user.admin?%>
 <p><%= link_to 'Admin', users_index_path%></p>
<%end%>
<%= render "layouts/footer" %>