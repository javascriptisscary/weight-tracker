<div class="container">
  <h2 class="kalam">All Entries</h2>
  <table id="recent-table" class="table table-striped table-bordered table-condensed">
    <tr>
      <td>Date</td>
      <td>Weight</td>
      <td>Edit</td>
      <td>Erase</td>
    </tr>
<% @user_days.each do |day| %>
    <tr class="context">
      <td><%=day.date%></td>
      <td class ="weight"><%=day.weight%></td>
      <td class ="edit"><%= link_to 'Edit', edit_day_path(day) %></td>
      <td class ="delete"><%= link_to 'Delete', day, method: :delete, data: {confirm: "Are you sure? It won't make you lose weight any faster ;)" } %></td>
     </tr>
<% end %>
  </table>
  <%= will_paginate @user_days %>
</div>
<%= render "layouts/sticky_footer" %>