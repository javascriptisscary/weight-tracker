<div class="container text-center">
  <h3>Input your weight. #Be honest!</h3>


  <%= form_for @day do |f| %>
  
    <p>Please enter date as yyyy-mm-dd</p>
      <div class="field form-horizontal">
            <%= f.label :date, class: "control-label"%>
        <%=   f.date_field :date, class: "form-control text-center", id: "datepicker"%>
      
    </div>
    
      <div class="field form-horizontal">
            <%= f.label :weight, class: "control-label" %>
            <%= f.text_field :weight, class: "form-control text-center",  placeholder: "Enter Weight" %>
      
    </div>
  <%= f.submit "Submit", class:"btn btn-lg btn-success", id:"submit" %>  
</div>
    
 
<% end %>

<%= render "layouts/sticky_footer" %>